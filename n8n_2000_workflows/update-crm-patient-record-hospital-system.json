{
  "name": "Update crm from Patient record and send to Hospital system",
  "nodes": [
    {
      "id": "trigger-patient-record",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        191000
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "update-crm-from-patient-record-and-send-to-hospital-system",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-patient-record",
      "name": "Fetch data from Patient record",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        191000
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/patient-record",
        "responseFormat": "json"
      }
    },
    {
      "id": "send-hospital-system",
      "name": "Send to Hospital system",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        191000
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/hospital-system",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-191000",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        191000
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Patient record",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Patient record": {
      "main": [
        {
          "node": "Send to Hospital system",
          "type": "main",
          "index": 0
        }
      ]
    },
    "Send to Hospital system": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}