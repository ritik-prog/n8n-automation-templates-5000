{
  "name": "Update ledger from Invoice sheet and send to Google Drive",
  "nodes": [
    {
      "id": "trigger-invoice-sheet",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        122000
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "update-ledger-from-invoice-sheet-and-send-to-google-drive",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-invoice-sheet",
      "name": "Fetch data from Invoice sheet",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        122000
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/invoice-sheet",
        "responseFormat": "json"
      }
    },
    {
      "id": "send-google-drive",
      "name": "Send to Google Drive",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        122000
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/google-drive",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-122000",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        122000
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Invoice sheet",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Invoice sheet": {
      "main": [
        {
          "node": "Send to Google Drive",
          "type": "main",
          "index": 0
        }
      ]
    },
    "Send to Google Drive": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}