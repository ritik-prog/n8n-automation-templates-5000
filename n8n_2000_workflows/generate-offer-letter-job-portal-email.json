{
  "name": "Generate offer letter from Job portal and send to Email",
  "nodes": [
    {
      "id": "trigger-job-portal",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        113500
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "generate-offer-letter-from-job-portal-and-send-to-email",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-job-portal",
      "name": "Fetch data from Job portal",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        113500
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/job-portal",
        "responseFormat": "json"
      }
    },
    {
      "id": "ai-generate-offer-letter",
      "name": "AI: Generate Offer Letter",
      "type": "n8n-nodes-base.openAIApi",
      "typeVersion": 1,
      "position": [
        0,
        113500
      ],
      "parameters": {
        "model": "gpt-4",
        "operation": "complete",
        "prompt": "Perform the following action on the incoming data: generate offer letter"
      }
    },
    {
      "id": "send-email",
      "name": "Send to Email",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        113500
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/email",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-113500",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        113500
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Job portal",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Job portal": {
      "main": [
        {
          "node": "AI: Generate Offer Letter",
          "type": "main",
          "index": 0
        }
      ]
    },
    "AI: Generate Offer Letter": {
      "main": [
        [
          {
            "node": "AI: Generate Offer Letter",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send to Email": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}