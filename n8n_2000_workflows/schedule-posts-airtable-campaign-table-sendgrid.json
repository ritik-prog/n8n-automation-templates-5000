{
  "name": "Schedule posts from Airtable campaign table and send to SendGrid",
  "nodes": [
    {
      "id": "trigger-airtable-campaign-table",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        76300
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "schedule-posts-from-airtable-campaign-table-and-send-to-sendgrid",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-airtable-campaign-table",
      "name": "Fetch data from Airtable campaign table",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        76300
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/airtable-campaign-table",
        "responseFormat": "json"
      }
    },
    {
      "id": "send-sendgrid",
      "name": "Send to SendGrid",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        76300
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/sendgrid",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-76300",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        76300
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Airtable campaign table",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Airtable campaign table": {
      "main": [
        {
          "node": "Send to SendGrid",
          "type": "main",
          "index": 0
        }
      ]
    },
    "Send to SendGrid": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}