{
  "name": "Summarize chat from Slack and send to Notion",
  "nodes": [
    {
      "id": "trigger-slack",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        29800
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "summarize-chat-from-slack-and-send-to-notion",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-slack",
      "name": "Fetch data from Slack",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        29800
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/slack",
        "responseFormat": "json"
      }
    },
    {
      "id": "ai-summarize-chat",
      "name": "AI: Summarize Chat",
      "type": "n8n-nodes-base.openAIApi",
      "typeVersion": 1,
      "position": [
        0,
        29800
      ],
      "parameters": {
        "model": "gpt-4",
        "operation": "complete",
        "prompt": "Perform the following action on the incoming data: summarize chat"
      }
    },
    {
      "id": "send-notion",
      "name": "Send to Notion",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        29800
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/notion",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-29800",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        29800
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Slack": {
      "main": [
        {
          "node": "AI: Summarize Chat",
          "type": "main",
          "index": 0
        }
      ]
    },
    "AI: Summarize Chat": {
      "main": [
        [
          {
            "node": "AI: Summarize Chat",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send to Notion": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}