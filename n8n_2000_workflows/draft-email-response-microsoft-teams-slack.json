{
  "name": "Draft email response from Microsoft Teams and send to Slack",
  "nodes": [
    {
      "id": "trigger-microsoft-teams",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        20900
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "draft-email-response-from-microsoft-teams-and-send-to-slack",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-microsoft-teams",
      "name": "Fetch data from Microsoft Teams",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        20900
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/microsoft-teams",
        "responseFormat": "json"
      }
    },
    {
      "id": "ai-draft-email-response",
      "name": "AI: Draft Email Response",
      "type": "n8n-nodes-base.openAIApi",
      "typeVersion": 1,
      "position": [
        0,
        20900
      ],
      "parameters": {
        "model": "gpt-4",
        "operation": "complete",
        "prompt": "Perform the following action on the incoming data: draft email response"
      }
    },
    {
      "id": "send-slack",
      "name": "Send to Slack",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        20900
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/slack",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-20900",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        20900
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Microsoft Teams",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Microsoft Teams": {
      "main": [
        {
          "node": "AI: Draft Email Response",
          "type": "main",
          "index": 0
        }
      ]
    },
    "AI: Draft Email Response": {
      "main": [
        [
          {
            "node": "AI: Draft Email Response",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send to Slack": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}