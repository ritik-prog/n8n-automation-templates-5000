{
  "name": "Create response draft from Intercom chat and send to CRM",
  "nodes": [
    {
      "id": "trigger-intercom-chat",
      "name": "Incoming Trigger",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -600,
        85100
      ],
      "parameters": {
        "httpMethod": "POST",
        "path": "create-response-draft-from-intercom-chat-and-send-to-crm",
        "responseCode": 200,
        "responseMode": "onReceived"
      }
    },
    {
      "id": "fetch-intercom-chat",
      "name": "Fetch data from Intercom chat",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        -300,
        85100
      ],
      "parameters": {
        "method": "GET",
        "url": "https://api.example.com/intercom-chat",
        "responseFormat": "json"
      }
    },
    {
      "id": "ai-create-response-draft",
      "name": "AI: Create Response Draft",
      "type": "n8n-nodes-base.openAIApi",
      "typeVersion": 1,
      "position": [
        0,
        85100
      ],
      "parameters": {
        "model": "gpt-4",
        "operation": "complete",
        "prompt": "Perform the following action on the incoming data: create response draft"
      }
    },
    {
      "id": "send-crm",
      "name": "Send to CRM",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        300,
        85100
      ],
      "parameters": {
        "method": "POST",
        "url": "https://api.example.com/crm",
        "responseFormat": "json",
        "options": {}
      }
    },
    {
      "id": "error-handler-600-85100",
      "name": "Send Error to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        600,
        85100
      ],
      "parameters": {
        "resource": "message",
        "operation": "post",
        "channel": "#automation-alerts",
        "text": "={{ $json.get('error_message', 'An error occurred') }}"
      }
    }
  ],
  "connections": {
    "Incoming Trigger": {
      "main": [
        [
          {
            "node": "Fetch data from Intercom chat",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch data from Intercom chat": {
      "main": [
        {
          "node": "AI: Create Response Draft",
          "type": "main",
          "index": 0
        }
      ]
    },
    "AI: Create Response Draft": {
      "main": [
        [
          {
            "node": "AI: Create Response Draft",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send to CRM": {
      "main": [
        [
          {
            "node": "Send Error to Slack",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {},
  "active": false
}