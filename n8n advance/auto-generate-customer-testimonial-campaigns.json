{
  "name": "auto-generate-customer-testimonial-campaigns",
  "nodes": [
    {
      "parameters": {
        "cronExpression": "0 9 * * *"
      },
      "id": "tc1",
      "name": "Daily 09:00 UTC",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [
        100,
        320
      ]
    },
    {
      "parameters": {
        "sheetId": "testimonials-sheet-id",
        "range": "NPS!A2:C999"
      },
      "id": "tc2",
      "name": "Load NPS (Sheets)",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 1,
      "position": [
        320,
        260
      ],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "google_sheets_cred",
          "name": "Google Sheets"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "const rows=$json.rows||[];return rows.filter(r=>Number(r[1]||0)>=9 && (r[2]||'')!=='asked').map(r=>({json:{email:r[0],score:Number(r[1]),status:r[2]||'new'}}));"
      },
      "id": "tc3",
      "name": "Pick Promoters",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        540,
        260
      ]
    },
    {
      "parameters": {
        "model": "gpt-4",
        "temperature": 0.3,
        "messages": [
          {
            "role": "system",
            "content": "Write a short outreach email asking for a testimonial and permission to use their quote. Return JSON {subject, body}."
          },
          {
            "role": "user",
            "content": "Contact {{$json.email}}, NPS {{$json.score}}"
          }
        ]
      },
      "id": "tc4",
      "name": "Draft Outreach (GPT-4)",
      "type": "n8n-nodes-base.openai",
      "typeVersion": 1,
      "position": [
        760,
        260
      ],
      "credentials": {
        "openAiApi": {
          "id": "openai_credential",
          "name": "OpenAI API"
        }
      }
    },
    {
      "parameters": {
        "functionCode": "let m;try{m=JSON.parse($json.choices[0].message.content)}catch(e){m={subject:'Quick testimonial?',body:'Hi'}};return [{json:m}];"
      },
      "id": "tc5",
      "name": "Parse Email JSON",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        980,
        260
      ]
    },
    {
      "parameters": {
        "resource": "message",
        "operation": "send",
        "fromEmail": "advocacy@yourcompany.com",
        "toEmail": "={{$prevNode['Pick Promoters'].json.email}}",
        "subject": "={{$json.subject}}",
        "text": "={{$json.body}}"
      },
      "id": "tc6",
      "name": "Send Outreach Email",
      "type": "n8n-nodes-base.smtp",
      "typeVersion": 1,
      "position": [
        1200,
        260
      ],
      "credentials": {
        "smtp": {
          "id": "smtp_cred",
          "name": "SMTP"
        }
      }
    },
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "testimonial-submission"
      },
      "id": "tc7",
      "name": "Submission Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        520
      ]
    },
    {
      "parameters": {
        "functionCode": "const b=$json.body||$json; return [{json:{email:b.email,quote:b.quote,permission:!!b.permission,company:b.company||'',name:b.name||''}}];"
      },
      "id": "tc8",
      "name": "Normalize Submission",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        520
      ]
    },
    {
      "parameters": {
        "url": "https://api.webflow.com/collections/{{$credentials.webflowTestimonialsCollection}}/items",
        "authentication": "none",
        "options": {
          "headersUi": {
            "parameter": [
              {
                "name": "Authorization",
                "value": "Bearer {{$credentials.webflowToken}}"
              },
              {
                "name": "accept-version",
                "value": "1.0.0"
              },
              {
                "name": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        "jsonParameters": true,
        "options_json": {
          "fields": {
            "name": "={{$json.name || $json.email}}",
            "slug": "={{($json.name||$json.email).toLowerCase().replace(/[^a-z0-9]+/g,'-')}}",
            "_draft": false,
            "_archived": false,
            "quote": "={{$json.quote}}",
            "company": "={{$json.company}}",
            "permission": "={{$json.permission}}"
          }
        }
      },
      "id": "tc9",
      "name": "Publish Testimonial (Webflow)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        540,
        520
      ]
    },
    {
      "parameters": {
        "channel": "#advocacy",
        "text": "New testimonial from {{$json.email}} \u2014 permission: {{$json.permission}}"
      },
      "id": "tc10",
      "name": "Slack Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        760,
        520
      ]
    }
  ],
  "connections": {
    "Daily 09:00 UTC": {
      "main": [
        [
          {
            "node": "Load NPS (Sheets)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Load NPS (Sheets)": {
      "main": [
        [
          {
            "node": "Pick Promoters",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Pick Promoters": {
      "main": [
        [
          {
            "node": "Draft Outreach (GPT-4)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Draft Outreach (GPT-4)": {
      "main": [
        [
          {
            "node": "Parse Email JSON",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Parse Email JSON": {
      "main": [
        [
          {
            "node": "Send Outreach Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Submission Webhook": {
      "main": [
        [
          {
            "node": "Normalize Submission",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Submission": {
      "main": [
        [
          {
            "node": "Publish Testimonial (Webflow)",
            "type": "main",
            "index": 0
          },
          {
            "node": "Slack Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false
}