{
  "name": "auto-update-crm-from-email-signature-captures",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "sig-capture"
      },
      "id": "es1",
      "name": "Signature Webhook (SigParser etc.)",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "const b=$json.body||$json;const domain=(b.website||'').replace(/^https?:\\/\\//,'').split('/')[0]||((b.email||'').split('@')[1]||'');return [{json:{email:(b.email||'').toLowerCase(),first:b.first,last:b.last,title:b.title,phone:b.phone,company:b.company,domain}}];"
      },
      "id": "es2",
      "name": "Normalize Fields",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        300
      ]
    },
    {
      "parameters": {
        "resource": "contact",
        "operation": "upsert",
        "additionalFields": {
          "propertiesUi": {
            "propertyValues": [
              {
                "property": "email",
                "value": "={{$json.email}}"
              },
              {
                "property": "firstname",
                "value": "={{$json.first}}"
              },
              {
                "property": "lastname",
                "value": "={{$json.last}}"
              },
              {
                "property": "jobtitle",
                "value": "={{$json.title}}"
              },
              {
                "property": "phone",
                "value": "={{$json.phone}}"
              },
              {
                "property": "company",
                "value": "={{$json.company}}"
              }
            ]
          }
        }
      },
      "id": "es3",
      "name": "Upsert Contact",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        540,
        260
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "resource": "company",
        "operation": "upsert",
        "additionalFields": {
          "propertiesUi": {
            "propertyValues": [
              {
                "property": "domain",
                "value": "={{$json.domain}}"
              },
              {
                "property": "name",
                "value": "={{$json.company}}"
              }
            ]
          }
        }
      },
      "id": "es4",
      "name": "Upsert Company",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        540,
        380
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "channel": "#data-quality",
        "text": "Signature captured for {{$prevNode['Normalize Fields'].json.email}}."
      },
      "id": "es5",
      "name": "Slack Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        760,
        320
      ]
    }
  ],
  "connections": {
    "Signature Webhook (SigParser etc.)": {
      "main": [
        [
          {
            "node": "Normalize Fields",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Fields": {
      "main": [
        [
          {
            "node": "Upsert Contact",
            "type": "main",
            "index": 0
          },
          {
            "node": "Upsert Company",
            "type": "main",
            "index": 0
          },
          {
            "node": "Slack Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false
}