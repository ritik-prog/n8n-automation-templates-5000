{
  "name": "generate-project-profitability-analysis",
  "nodes": [
    {
      "parameters": {
        "cronExpression": "0 6 1 * *"
      },
      "id": "pa1",
      "name": "Monthly 1st 06:00 UTC",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [
        100,
        320
      ]
    },
    {
      "parameters": {
        "url": "https://billing.example.com/api/invoices?period=prev_month",
        "authentication": "none",
        "options": {
          "headersUi": {
            "parameter": [
              {
                "name": "Authorization",
                "value": "Bearer {{$credentials.billingToken}}"
              }
            ]
          }
        }
      },
      "id": "pa2",
      "name": "Fetch Invoices (placeholder)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        320,
        260
      ]
    },
    {
      "parameters": {
        "url": "https://api.harvestapp.com/v2/reports/time?from={{encodeURIComponent(new Date(new Date().getFullYear(), new Date().getMonth()-1,1).toISOString())}}&to={{encodeURIComponent(new Date(new Date().getFullYear(), new Date().getMonth(),0).toISOString())}}",
        "authentication": "none",
        "options": {
          "headersUi": {
            "parameter": [
              {
                "name": "Authorization",
                "value": "Bearer {{$credentials.harvestToken}}"
              },
              {
                "name": "Harvest-Account-Id",
                "value": "{{$credentials.harvestAccountId}}"
              }
            ]
          }
        }
      },
      "id": "pa3",
      "name": "Fetch Time Costs (placeholder)",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        320,
        380
      ]
    },
    {
      "parameters": {
        "functionCode": "\nconst inv=($items(0).item.json.invoices||[]); // [{project, amount}]\nconst time=($items(1).item.json.projects||[]); // [{project, hours, costRate}]\nconst byProj={};\nfor(const i of inv){ const k=i.project; byProj[k]=byProj[k]||{revenue:0,cost:0}; byProj[k].revenue+=(+i.amount||0); }\nfor(const t of time){ const k=t.project; byProj[k]=byProj[k]||{revenue:0,cost:0}; byProj[k].cost+= (+t.hours||0) * (+t.costRate||0); }\nconst rows=Object.entries(byProj).map(([project,v])=>({project, revenue:+v.revenue.toFixed(2), cost:+v.cost.toFixed(2), margin:+(v.revenue - v.cost).toFixed(2), marginPct: v.revenue? +(((v.revenue - v.cost)/v.revenue)*100).toFixed(2): null}));\nrows.sort((a,b)=> (a.marginPct||-999) < (b.marginPct||-999) ? 1 : -1);\nreturn rows.map(r=>({json:r}));\n"
      },
      "id": "pa4",
      "name": "Compute Profitability",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        540,
        320
      ]
    },
    {
      "parameters": {
        "sheetId": "pm-ops-sheet-id",
        "range": "Profit!A1",
        "fields": [
          "={{$json.project}}",
          "={{$json.revenue}}",
          "={{$json.cost}}",
          "={{$json.margin}}",
          "={{$json.marginPct}}",
          "={{$now}}"
        ]
      },
      "id": "pa5",
      "name": "Write to Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 1,
      "position": [
        760,
        320
      ],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "google_sheets_cred",
          "name": "Google Sheets"
        }
      }
    },
    {
      "parameters": {
        "channel": "#pmo",
        "text": "\ud83d\udcb5 Profitability updated \u2014 Top project {{$json.project}} ({{$json.marginPct}}% margin)"
      },
      "id": "pa6",
      "name": "Slack PMO",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        980,
        320
      ]
    }
  ],
  "connections": {
    "Monthly 1st 06:00 UTC": {
      "main": [
        [
          {
            "node": "Fetch Invoices (placeholder)",
            "type": "main",
            "index": 0
          },
          {
            "node": "Fetch Time Costs (placeholder)",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Fetch Invoices (placeholder)": {
      "main": [
        [
          {
            "node": "Compute Profitability",
            "type": "main",
            "index": 0
          }
