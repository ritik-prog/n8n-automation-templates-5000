{
  "name": "sync-support-tickets-with-crm-customer-records",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "support-ticket-event"
      },
      "id": "s1",
      "name": "Support Webhook (e.g., Zendesk)",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        300
      ]
    },
    {
      "parameters": {
        "functionCode": "const b = $json.body || $json;return [{ json: {ticketId: b.id, subject: b.subject, description: b.description, status: b.status, priority: b.priority,email: b.requester?.email || '', domain: b.organization?.domain || '', updatedAt: b.updated_at} }];"
      },
      "id": "s2",
      "name": "Extract Ticket",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        300
      ]
    },
    {
      "parameters": {
        "operation": "search",
        "resource": "contact",
        "additionalFields": {
          "email": "={{$json.email}}"
        }
      },
      "id": "s3",
      "name": "Find Contact by Email",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        540,
        240
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "operation": "search",
        "resource": "company",
        "additionalFields": {
          "domain": "={{$json.domain}}"
        }
      },
      "id": "s4",
      "name": "Find Company by Domain",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        540,
        380
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "resource": "ticket",
        "operation": "create",
        "additionalFields": {
          "propertiesUi": {
            "propertyValues": [
              {
                "property": "hs_pipeline",
                "value": "support_pipeline"
              },
              {
                "property": "hs_ticket_category",
                "value": "Support"
              },
              {
                "property": "subject",
                "value": "={{$prevNode['Extract Ticket'].json.subject}}"
              },
              {
                "property": "content",
                "value": "={{$prevNode['Extract Ticket'].json.description}}"
              },
              {
                "property": "hs_ticket_priority",
                "value": "={{$prevNode['Extract Ticket'].json.priority}}"
              },
              {
                "property": "hs_ticket_status",
                "value": "={{$prevNode['Extract Ticket'].json.status}}"
              }
            ]
          }
        }
      },
      "id": "s5",
      "name": "Create/Update Ticket in HubSpot",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        760,
        300
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "resource": "note",
        "operation": "create",
        "additionalFields": {
          "propertiesUi": {
            "propertyValues": [
              {
                "property": "hs_timestamp",
                "value": "={{$prevNode['Extract Ticket'].json.updatedAt}}"
              },
              {
                "property": "hs_note_body",
                "value": "={{'Ticket '+$prevNode['Extract Ticket'].json.ticketId+' synced.'}}"
              }
            ]
          }
        }
      },
      "id": "s6",
      "name": "Log Sync Note",
      "type": "n8n-nodes-base.hubspot",
      "typeVersion": 1,
      "position": [
        980,
        300
      ],
      "credentials": {
        "hubspotApi": {
          "id": "hubspot_api_cred",
          "name": "HubSpot API"
        }
      }
    },
    {
      "parameters": {
        "channel": "#support-sync",
        "text": "Ticket {{$prevNode['Extract Ticket'].json.ticketId}} synced to CRM (status {{$prevNode['Extract Ticket'].json.status}})."
      },
      "id": "s7",
      "name": "Slack Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        1200,
        300
      ]
    }
  ],
  "connections": {
    "Support Webhook (e.g., Zendesk)": {
      "main": [
        [
          {
            "node": "Extract Ticket",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Extract Ticket": {
      "main": [
        [
          {
            "node": "Find Contact by Email",
            "type": "main",
            "index": 0
          },
          {
            "node": "Find Company by Domain",
            "type": "main",
            "index": 0
          },
          {
            "node": "Create/Update Ticket in HubSpot",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create/Update Ticket in HubSpot": {
      "main": [
        [
          {
            "node": "Log Sync Note",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Log Sync Note": {
      "main": [
        [
          {
            "node": "Slack Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false
}