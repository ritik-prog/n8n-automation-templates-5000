{
  "name": "create-automated-expense-report-approval-workflows",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "expense-submit"
      },
      "id": "ex1",
      "name": "Submit Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        260
      ]
    },
    {
      "parameters": {
        "functionCode": "\nconst b=$json.body||$json;\nconst items=(b.items||[]).map((x,i)=>({no:i+1,cat:(x.category||'misc').toLowerCase(),amount:+(x.amount||0),date:x.date||new Date().toISOString().slice(0,10),receipt:!!x.receiptUrl}));\nconst total=items.reduce((s,x)=>s+x.amount,0);\nconst missingReceipts=items.filter(x=>x.amount>=50 && !x.receipt).length;\nconst policyFlags=[];\nif(total>1000) policyFlags.push('total>1000');\nif(missingReceipts>0) policyFlags.push('missing_receipts');\nreturn [{json:{employee:b.employee, email:(b.email||'').toLowerCase(), manager:b.manager||'', items,total,missingReceipts,policyFlags, reportId: b.reportId || 'exp-'+Date.now() }}];\n"
      },
      "id": "ex2",
      "name": "Normalize & Policy Check",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        260
      ]
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{$json.policyFlags.length>0}}"
            }
          ]
        }
      },
      "id": "ex3",
      "name": "IF Policy Flags",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        540,
        260
      ]
    },
    {
      "parameters": {
        "resource": "message",
        "operation": "send",
        "fromEmail": "finance@yourcompany.com",
        "toEmail": "={{$json.manager}}",
        "subject": "Expense report {{$json.reportId}} pending approval",
        "text": "Approve: https://yourdomain.com/expense-approve?id={{encodeURIComponent($json.reportId)}}\\nDeny: https://yourdomain.com/expense-deny?id={{encodeURIComponent($json.reportId)}}\\nFlags: {{$json.policyFlags.join(', ')}}"
      },
      "id": "ex4",
      "name": "Email Manager",
      "type": "n8n-nodes-base.smtp",
      "typeVersion": 1,
      "position": [
        760,
        240
      ],
      "credentials": {
        "smtp": {
          "id": "smtp_cred",
          "name": "SMTP"
        }
      }
    },
    {
      "parameters": {
        "httpMethod": "GET",
        "path": "expense-approve"
      },
      "id": "ex5",
      "name": "Approve Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        520
      ]
    },
    {
      "parameters": {
        "httpMethod": "GET",
        "path": "expense-deny"
      },
      "id": "ex6",
      "name": "Deny Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        100,
        640
      ]
    },
    {
      "parameters": {
        "functionCode": "const q=$json.query||{}; return [{json:{reportId:q.id, decision:'approved'}}];"
      },
      "id": "ex7",
      "name": "Normalize Approve",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        520
      ]
    },
    {
      "parameters": {
        "functionCode": "const q=$json.query||{}; return [{json:{reportId:q.id, decision:'denied'}}];"
      },
      "id": "ex8",
      "name": "Normalize Deny",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [
        320,
        640
      ]
    },
    {
      "parameters": {
        "url": "https://api.accounting.example.com/v3/expenses",
        "authentication": "none",
        "jsonParameters": true,
        "options": {
          "headersUi": {
            "parameter": [
              {
                "name": "Authorization",
                "value": "Bearer {{$credentials.accountingToken}}"
              },
              {
                "name": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        "options_json": {
          "reportId": "={{$json.reportId}}",
          "status": "={{$json.decision}}",
          "total": "={{$prevNode['Normalize & Policy Check'].json.total}}",
          "employee": "={{$prevNode['Normalize & Policy Check'].json.email}}"
        }
      },
      "id": "ex9",
      "name": "Post to Accounting",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        540,
        580
      ]
    },
    {
      "parameters": {
        "sheetId": "finance-ops-sheet-id",
        "range": "Expenses!A1",
        "fields": [
          "={{$now}}",
          "={{$json.reportId}}",
          "={{$prevNode['Normalize & Policy Check'].json.email}}",
          "={{$prevNode['Normalize & Policy Check'].json.total}}",
          "={{$json.decision}}"
        ]
      },
      "id": "ex10",
      "name": "Log to Sheets",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 1,
      "position": [
        760,
        580
      ],
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "google_sheets_cred",
          "name": "Google Sheets"
        }
      }
    },
    {
      "parameters": {
        "channel": "#finance",
        "text": "Expense report {{$json.reportId}} {{$json.decision}}"
      },
      "id": "ex11",
      "name": "Slack Notify",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 1,
      "position": [
        980,
        580
      ]
    }
  ],
  "connections": {
    "Submit Webhook": {
      "main": [
        [
          {
            "node": "Normalize & Policy Check",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize & Policy Check": {
      "main": [
        [
          {
            "node": "IF Policy Flags",
            "type": "main",
            "index": 0
          },
          {
            "node": "Email Manager",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Approve Webhook": {
      "main": [
        [
          {
            "node": "Normalize Approve",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Deny Webhook": {
      "main": [
        [
          {
            "node": "Normalize Deny",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Approve": {
      "main": [
        [
          {
            "node": "Post to Accounting",
            "type": "main",
            "index": 0
          },
          {
            "node": "Log to Sheets",
            "type": "main",
            "index": 0
          },
          {
            "node": "Slack Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Normalize Deny": {
      "main": [
        [
          {
            "node": "Post to Accounting",
            "type": "main",
            "index": 0
          },
          {
            "node": "Log to Sheets",
            "type": "main",
            "index": 0
          },
          {
            "node": "Slack Notify",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": false
}